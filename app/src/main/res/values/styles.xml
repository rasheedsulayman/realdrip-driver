<resources>

    <style name="AppTheme" parent="AppThemeParent">
        <item name="android:windowBackground">@color/colorPrimary_lightTheme</item>
        <item name="android:statusBarColor">#0D050000</item>
    </style>

    <style name="AppTheme.HorizontalButtonAppearance" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="fontFamily">@font/muli_bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:theme">@style/AppTheme.TextAppearance.TextInputLayout</item>
    </style>


</resources>
